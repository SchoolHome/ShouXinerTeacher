#ifndef SweetAlarm_SweetAlarmGlobalFunction_h
#define SweetAlarm_SweetAlarmGlobalFunction_h


#define UIColorRGB(r, g, b)			[UIColor colorWithRed:(r)/255.0 green:(g)/255.0 blue:(b)/255.0 alpha:1.0]
#define UIColorRGBA(r, g, b, a)		[UIColor colorWithRed:(r)/255.0 green:(g)/255.0 blue:(b)/255.0 alpha:(a/255.0)]

#define UIColorHexRGB(c)			[UIColor colorWithRed:(((c)>>16)&0xFF)/255.0 green:(((c)>>8)&0xFF)/255.0 blue:((c)&0xFF)/255.0 alpha:1.0]
#define UIColorHexRGBA(c)			[UIColor colorWithRed:((c>>24)&0xFF)/255.0 green:((c>>16)&0xFF)/255.0 blue:((c>>8)&0xFF)/255.0 alpha:((c)&0xFF)/255.0]



#define FXRect(x,y,w,h) CGRectMake(x,y,w,h)
#define FXImg(imgpath) [UIImage imageNamed:imgpath] 

#define FXPATTENCOLOR(imgpath) [UIColor colorWithPatternImage:FXImg(imgpath)]

#endif
